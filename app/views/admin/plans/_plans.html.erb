<%= link_to new_admin_plan_path, method: :get, remote: true,
  class: "btn_fix_action btn_ico btn_ico_plus opt-mt10" do %>
  <span>新規ユーザの追加</span>
<% end %>
<section class="data_list_area mygol_user_list">
  <table>
    <thead>
      <tr>
        <th rowspan="2"><%= Plan.human_attribute_name :no %></th>
        <th rowspan="2"><%= t ".name" %></th>
        <th rowspan="2"><%= t ".product" %></th>
        <th rowspan="2"><%= t ".created_at" %></th>
        <th rowspan="2"><%= t ".updated_at" %> </th>
        <th rowspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% plans.each_with_index do |plan, index| %>
        <tr recordindex="0">
          <td class="opt-al-c"><%= index.next %></td>
          <td class="opt-al-c"><%= plan.name %></td>
          <td class="opt-al-c"><%= plan.product.name if plan.product.present? %></td>
          <td class="opt-al-c"><%= l plan.created_at, format: :format_datetime %></td>
          <td class="opt-al-c"><%= l plan.updated_at, format: :format_datetime %></td>
          <td>
            <%= link_to edit_admin_plan_path(plan), method: :get, remote: true, class: "class_link mg-link" do %>
              <font><font>Edit</font></font>
            <% end %>
            <%= link_to admin_plan_path(plan), method: :get, remote: true, class: "class_link mg-link" do %>
              <font><font>Details</font></font>
            <% end %>
            <%= link_to admin_plan_path(plan), method: :delete,
              class: "class_link mg-link", data: {confirm: t("messages.confirm")} do %>
              <font><font>Delete</font></font>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <center><%= paginate plans, theme: "twitter-bootstrap-3" %></center>
</section>
